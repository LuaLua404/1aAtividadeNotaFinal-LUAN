<body>
<h1>Pressione o botão abaixo para mudar a cor da página</h1>
<button>Mudar cor</button>
<script>
var botao = document.querySelector('button')

var cores = ['blue', 'yellow', 'red', 'green', 'pink', 'orange', 'purple', 'brown']

botao.addEventListener('click', function() {
    var variacaoDasCores = cores[Math.floor(Math.random() * cores.length)]

    document.body.style.backgroundColor = variacaoDasCores
})
</script>
</body>
