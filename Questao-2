<h1>Somatório de dois números</h1>
<p>Digite dois números para somar:</p>
<div class="box-1">
<div class="box-2">
    <input class="number1" type="number" placeholder="Digite um número">
    <input class="number2" type="number" placeholder="Digite outro número">
 </div>   
 <button class="soma">Somar</button>
</div>
<script>
var input1 = document.querySelector('.number1')
var input2 = document.querySelector('.number2')
var botao = document.querySelector('.soma')

botao.addEventListener('click', function() {
    var valor1 = Number(input1.value)
    var valor2 = Number(input2.value)

    var soma = valor1 + valor2

    alert("A soma é igual a " + soma)
})
</script>
